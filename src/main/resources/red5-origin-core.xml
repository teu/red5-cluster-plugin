		<property name="address" value="${mrtmp.host}" />
		<property name="port" value="${mrtmp.port}" />
		<property name="receiveBufferSize" value="${mrtmp.receive_buffer_size}" />
		<property name="sendBufferSize" value="${mrtmp.send_buffer_size}" />
